<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t("pages.title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t("home.title"), root_path %></li>
        <li><%= link_to t("help.title"), help_path %></li>
        <% if logged_in? %>
          <li>
            <%= link_to t("noti.title", count: @notifications_count), notifications_path %>    
          </li>
          <li>
          <% if current_user.admin? %>
            <%= link_to t("report.title"), reports_path %>
          <% end %>    
          </li>
          <% if current_user.admin? %>
            <li><%= link_to t("users.title"), admin_users_path %></li>
          <% else %>
            <li><%= link_to t("users.title"), users_path %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "users.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("profile"), current_user %></li>
              <li>
                <%= link_to t("setting"), edit_user_path(current_user) %>
              </li>
              <% if current_user.admin? %>
                <li>
                  <%= link_to t("position.manage"), admin_positions_path %>
                </li>
                <li>
                  <%= link_to t("division.manage"), admin_divisions_path %>
                </li>
              <% end %>
              <li class="divider"></li>
              <li>
                <%= link_to t("logout.title"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("login.btn"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
