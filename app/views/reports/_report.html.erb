<li id="report-<%= report.id %>">
  <p>
    <span class="user">
      <%= image_tag t("avatar"), class: "image-avatar" %>
      <%= link_to report.user.name, report.user %>
    </span>
  </p>
  <div>
    <span class="content">
      <%= t "report.progress" %>: 
      <%= report.progress %>
    </span>
  </div>
  <div>
    <span class="content">
      <%= t "report.rpd" %>: 
      <%= report.report_date %>
    </span>
  </div>
  <div>
    <span class="content">
      <%= t "report.achievement" %>: 
      <%= report.achievement %>
    </span>
  </div>
  <div>
    <span class="content">
      <%= t "report.ndp" %>: 
      <%= report.next_day_plan %>
    </span>
  </div>  
  <div>
    <span class="content">
      <%= t "report.comment_question" %>: 
      <%= report.comment_question %>
    </span>
  </div>
  <div>
    <span class="timestamp content">
      <%= t "report.send" %> 
      <%= time_ago_in_words report.created_at %> 
      <%= t "report.ago" %>
    </span>
  </div>
</li>
