<div class="col-md-6 col-md-offset-3" id="request-noti">
  <% if params[:date].present? || params[:month].present? %>
    <% if @requests.present? %>
      <h2><%= t "search.title", size: @requests.size %></h2>
      <ul class="requests">
        <%= render @requests %>
      </ul>
    <% else %>
      <p class="center">
        <%= t "search.date_request" %>
        <%= params[:date] %>
        <%= params[:month] %>
      </p>
    <% end %>
  <% else %>
    <h1><%= t "request.title_1" %></h1>
    <ul class="requests">
      <%= render @requests %>
    </ul>
  <% end %>
</div>
