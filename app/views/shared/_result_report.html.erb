<% if params[:search].present? %>
  <% if @reports.present? %>
    <ul class="reports">
      <%= render @reports %>
    </ul>
  <% else %>
    <p>
      <span> 
        <%= t "search.progress" %>
      </span>
      <i>
        <%= params[:search] %>
      </i>
      <span>
        <%= t "search.date" %>
      </span>
      <i>
        <%= params[:search] %>
      </i>
    </p>
  <% end %>
<% else %>
  <h1><%= t "report.all" %></h1>
  <div class="col-md-6 col-md-offset-3">
    <ul class="reports">
      <%= render @reports %>
    </ul>
  </div>  
<% end %>
