<% @user ||= current_user %>
<div class="stats">
  <%= link_to relationships_path id: @user, relationship: "following" do %>
    <strong id="following" class="stat">
      <%= @user.following.count %>
    </strong>
    <%= t "follow_user.following" %>
  <% end %>
  <%= link_to relationships_path id: @user, relationship: "followers" do %>
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    <%= t "follow_user.followers" %>
  <% end %>
</div>
