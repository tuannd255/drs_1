<% provide :title, t("home.title") %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="request_form">
        <%= render "shared/request_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t "request.feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
<div class="row">
  <div class="col-md-12 center">
    <h1><%= t "home.title" %></h1>
    <p>
      <%= t "home.content" %>
    </p>
    <%= link_to t("signup.btn"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>
<% end %>
