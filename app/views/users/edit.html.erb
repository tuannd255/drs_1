<% provide :title, t("edit.title") %>
<h1><%= t "edit.content" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :gender %>
      <%= f.select :gender, options_for_select(@sex.collect{|a, v|[a, a]},
        @user.gender) %>       

      <%= f.label :birthday %>
      <%= f.date_field :birthday, class: "form-control" %>

      <%= f.fields_for :profile, @user.profile do |profile| %>
        <%= f.label :skill %>
        <%= profile.select :skill_id, Skill.all.collect{|skill|
          [skill.language, skill.id]} %>

        <%= f.label :division %>
        <%= profile.select :division_id, Division.all.collect{|division|
          [division.descrition, division.id]} %>
      <% end %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("signup.confirm") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("edit.save"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
